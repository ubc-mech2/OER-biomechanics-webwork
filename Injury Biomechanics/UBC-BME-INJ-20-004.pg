);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");

$ml = new_match_list();
$ml->qa(
"Hybrid III", "High Speed Frontal and Rear Impact",
"BioRID II", "Low Intensity Rear Impact",
"BIOSID", "Side Impact",
"THOR", "Next Generation Frontal Impact",
"POLAR", "Pedestrian Impact"
);

# use pop-up-lists
$ml->rf_print_q(~~&pop_up_list_print_q);
# you may need to add more letters D=>"D", etc. 
$ml->ra_pop_up_list([No_answer=>"?",A=>"A",B=>"B",C=>"C", D=>"D", E=>"E"]);
$ml->choose(5);
##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
Match the following ATDs to the relevant application:
$PAR
\{ $ml->print_q() \}
\{ $ml->print_a() \}
$PAR
END_TEXT
Context()->normalStrings;

##############################################################
#
#  Answers
#
#
install_problem_grader(~~&std_problem_grader);
$showPartialCorrectAnswers = 0;
ANS( str_cmp( $ml->ra_correct_ans ) );

ENDDOCUMENT();        
